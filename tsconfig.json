{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": false, // Disable strict type checking
    "noEmitOnError": false, // Allow emitting output even if there are type errors
    "skipLibCheck": true, // Skip type checking for library files
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
